+package com.chris.m3usuite.player
+
+import org.junit.Assert.assertEquals
+import org.junit.Test
+
+class ExternalPlayerTest {
+
+    @Test
+    fun guessMime_basicMappings() {
+        assertEquals("application/vnd.apple.mpegurl", ExternalPlayer.guessMime("http://example.com/a.m3u8"))
+        assertEquals("application/dash+xml", ExternalPlayer.guessMime("https://example.com/manifest.mpd"))
+        assertEquals("video/mp4", ExternalPlayer.guessMime("file:///sdcard/video.mp4"))
+        assertEquals("video/x-matroska", ExternalPlayer.guessMime("/storage/emulated/0/Movies/movie.mkv"))
+        assertEquals("video/MP2T", ExternalPlayer.guessMime("http://example.com/live.ts"))
+        // default
+        assertEquals("video/*", ExternalPlayer.guessMime("http://example.com/unknown.xyz"))
+    }
+}
